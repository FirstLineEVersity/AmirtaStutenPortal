<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_librarytransactionhtml"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/pageHeader"
        layout="@layout/page_header"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tblLibraryMain"
        android:layout_below="@+id/pageHeader"
        android:background="@color/cardColorp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="20dp">
    <TableRow>
        <TextView
            android:id="@+id/tvlblMemberType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Member Type"
            android:textColor="@color/colorblue"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtMemberType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="School Name"
            android:textColor="#5C595C"
            android:textSize="16dp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tvlblMemberCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Member Code"
            android:textColor="@color/colorblue"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtMemberCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="#5C595C"
            android:textSize="16dp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tvMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Member Name"
            android:textColor="@color/colorblue"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="#5C595C"
            android:textSize="16dp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tvlblpolicyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Policy Name"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorblue"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtPolicyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="Policy"
            android:textColor="#5C595C"
            android:textSize="16dp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tvlblStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Status"
            android:textColor="@color/colorblue"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="#5C595C"
            android:textSize="16dp"/>
        </TableRow>
    </TableLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLibraryTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pageFooter"
        android:layout_below="@+id/tblLibraryMain"
        android:layout_gravity="left"
        android:background="@color/colorGrey"
        android:scrollbars="vertical">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/txtNoData"
        android:text="No Data"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="25dp"
        />

    <include
        android:id="@+id/pageFooter"
        layout="@layout/page_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>